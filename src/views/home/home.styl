@import '../../assets/styles/variables';
@import '../../assets/styles/mixins';

.nav-menu
    height 456px
    color #333
    font-size 30px
    text-align center
    background-color $fcWhite
.menu-group
    display flex
    flex-wrap wrap
    .group-item
        width 25%
        height 136px
        padding-top 48px
        img
            width 88px
            height 88px
            margin-bottom 16px
            border-radius 44px
            overflow hidden
        p
            text-overflow ellipsis
            overflow hidden
            white-space nowrap
            font-size 26px
            line-height 32px

.article-tabs
    margin-top 20px
    background-color $fcWhite
    .tab-pannel
        display flex
        height 84px
        line-height 84px
        border-bottom 1px solid $fcGreyer
        .pannel-item
            flex 1
            text-align center
            padding 0 20px
            .inner
                border-bottom 3px solid transparent
                height 81px
            &.active
                .inner
                    border-bottom 3px solid $fcAcaRed
                    color $fcAcaRed

.content-list
    li
        retinaBorder(false, false, false, true)

.article-wrap
    padding 30px 32px
    display flex
    .img-box
        width 200px
        height 150px
        overflow hidden
        img
            width 100%
    .info
        flex 1
        padding 8px 16px 7px 28px
        .two-line
            overflow hidden
            text-overflow ellipsis
            display -webkit-box
            -webkit-line-clamp 2
            -webkit-box-orient vertical
            word-break break-all
        .title
            font-size 26px
            margin-bottom 8px
            line-height 32px
            height 64px
        .desc
            font-size 22px
            padding 7px 0 0
            line-height 28px
            height 56px
            color $fcGreyish

.article-empty
    padding-top 32px
    color $fcGreyish
    line-height 54px
    text-align center
